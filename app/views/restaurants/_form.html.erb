<%= simple_form_for(@restaurant) do |f|%>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
  </div>

  <div class="form-actions btn btn-success">
    <%= f.button :submit %>
  </div>
  <br>
  <%= link_to 'Back', restaurants_path %>
<% end %>
